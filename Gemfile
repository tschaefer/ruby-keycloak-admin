# frozen_string_literal: true

source 'https://rubygems.org'
gemspec

group :development, :test do
  # console and debugging
  gem 'pry'
  gem 'pry-byebug'
  gem 'pry-doc'
  gem 'pry-rescue'
  gem 'pry-stack_explorer'
  gem 'pry-theme'

  # silence warnings about deprecated standard gems
  gem 'csv'
  gem 'irb'
  gem 'logger'
  gem 'ostruct'
  gem 'reline'

  # ruby make
  gem 'rake'

  # testing
  gem 'rspec'

  # linting
  gem 'rubocop'
  gem 'rubocop-rake'
  gem 'rubocop-rspec'
  gem 'simplecov'

  # mocking
  gem 'vcr'
  gem 'webmock'
end
